<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Rampoo Hello</title>
    <script>
        const ROOM_ID = "<%= roomId %>";
    </script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha256-4+XzXVhsDmqanXGHaHvgh1gMQKX40OUvDEBTu8JcmNs=" crossorigin="anonymous"></script>
    
    <style>
        video{
            width: 200px;
            height: 200px;
        }

        .chat-type{
          margin-top: 10px;
          display: flex;
        }

        #chat-message{
          height : 700px;
          overflow-y: auto;
          overflow-x: hidden;
        }

        #chat-box{
          background-color: aliceblue;
          border-radius: 20px;
          padding: 20px;
        }

    </style>
  </head>
  <body>

    <div class="container">
        <h1>Rampoo Hello</h1>

        <div class="video-and-chat-wrapper row justify-content-center">
            <section id="video-grid" class="col-md-8">
            </section>

            <section id="chat-box" class="col-md-4">
                <div id="chat-message">
                    <!-- <p>test message</p> -->
                </div>
                <div class="chat-type">
                    <input id="msg-input" type="text" class="form-control" name="message" placeholder="Type here">
                    <button id="send-btn" onclick="onSendClick()" class="btn btn-small btn-primary">Send</button>
                </div>
            </section>
        </div>
    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.1/socket.io.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    
    <script>
      const hasGetUserMedia = !!(
        navigator.mediaDevices && navigator.mediaDevices.getUserMedia
      );

      if (!hasGetUserMedia) {
        alert("Your browser doesn't support this app");
      }
    </script>

    <script src="videochat.js"></script>
    <script src="chat.js"></script>
   
  </body>
</html>
